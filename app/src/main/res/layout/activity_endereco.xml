<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_vertical"
    tools:context=".activity.activity.EnderecoActivity">

    <android.support.v7.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:text="@string/seu_endereco"
        android:textSize="22dp"
        android:textColor="@color/colorAccent"/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/logradouro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:textSize="18dp"
        android:textColor="@color/colorAccent"/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/complemento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="4dp"
        android:textSize="18dp"
        android:textColor="@color/colorAccent"/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/bairro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="4dp"
        android:textSize="18dp"
        android:textColor="@color/colorAccent"/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/cep"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="4dp"
        android:textSize="18dp"
        android:textColor="@color/colorAccent"/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/cidade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="4dp"
        android:textSize="18dp"
        android:textColor="@color/colorAccent"/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/uf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="4dp"
        android:textSize="18dp"
        android:textColor="@color/colorAccent"/>

    <Button
        android:id="@+id/btn_buscarNovoEndereco"
        style="@style/RaisedButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="32dp"
        android:text="@string/btn_buscar_novo_endereco" />

</android.support.v7.widget.LinearLayoutCompat>